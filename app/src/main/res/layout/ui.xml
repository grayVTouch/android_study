<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:background="#D31C1C"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="控制系统界面可见度"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="去掉状态栏中非系统图标"
            android:onClick="downBrightness"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="还原状态栏中非系统图标"
            android:onClick="originBrightness"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="隐藏状态栏"
            android:onClick="hideActionBar"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="还原状态栏"
            android:onClick="originActionBar"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="隐藏导航栏"
            android:onClick="hideNavigator"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="还原导航栏"
            android:onClick="originNavigator"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全屏（向后倾斜）"
            android:onClick="fullscreen_1"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全屏（沉浸式）"
            android:onClick="fullscreen_2"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全屏（粘性沉浸式）"
            android:onClick="fullscreen_3"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="退出全屏"
            android:onClick="originScreen"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>