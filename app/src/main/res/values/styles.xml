<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EC1EA7</item>
        <item name="colorPrimaryDark">#EC1EA7</item>
        <item name="colorAccent">#29DC15</item>
    </style>

    <style name="green_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="jd_menu_image">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_wrap.jd_menu_text">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="jd_menu_linear_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/none_border</item>
    </style>

    <style name="none_border" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
