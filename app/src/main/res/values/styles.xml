<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EC1EA7</item>
        <item name="colorPrimaryDark">#EC1EA7</item>
        <item name="colorAccent">#29DC15</item>
    </style>

    <style name="green_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="jd_menu_image">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_wrap.jd_menu_text">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="jd_menu_linear_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/none_border</item>
    </style>

    <style name="none_border" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 启动页 样式设置 -->
    <!--
      1. Theme.AppCompat.Light.NoActionBar 是必须设置的！否则会带有 应用栏
      2. 无需理会 android:windowLayoutInDisplayCutoutMode="shortEdges"

      -->
    <style name="theme_bcy_app" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/bcy_launcher_xml</item>

<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="windowActionBar">false</item>-->

        <!-- android 全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 数据测试 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置window过度效果 禁用窗口的预览动画 -->
        <item name="android:windowDisablePreview">false</item>
        <!-- 异形屏适配 不用理会错误信息 -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- 在5.0后，增加了一个windowDrawsSystemBarBackgrounds属性，用来标志此窗口是否负责绘制系统栏背景，
   我们把它设成false，这样当它绘制windowBackground的时候，就会在NavigationBar之上。-->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>

        <!-- 设置窗口半透明；不建议设置；会导致启动有明显的卡顿感觉-->
        <item name="android:windowIsTranslucent">false</item>

<!--        <item name="android:windowActionBarOverlay">@null</item>-->
    </style>
    

</resources>
